//      return 0;
    }
    
//    new Exception().printStackTrace();
    
    for(int i = 1; i < nodePath.getNodes().length; i++) {
      if(items.size() < 1) {
        explorer.addErrorPath(path);
        return false;
//        if(explorer.isErrorPath(path)) {
//          explorer.showErrorPath(path);
